<h1>Listing scenarios</h1>

<table>
  <tr>
    <th>Content</th>
    <th>Parent</th>
    <th>Position</th>
    <th>Type</th>
  </tr>

<% for scenario in @scenarios %>
  <tr>
    <td><%=h scenario.content %></td>
    <td><%=h scenario.parent_id %></td>
    <td><%=h scenario.position %></td>
    <td><%=h scenario.type %></td>
    <td><%= link_to 'Show', scenario %></td>
    <td><%= link_to 'Edit', edit_scenario_path(scenario) %></td>
    <td><%= link_to 'Destroy', scenario, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

