<h1>Listing stories</h1>

<div class="grid_2 prefix_2">
  <p>
    Title
  </p>
</div>
<div class="grid_5">
  <p>
    Description
  </p>
</div>
<div class="clear">&nbsp;</div>
<% for story in @stories %>
  <div class="grid_2 prefix_2">
    <p>
      <%= story.title %>
    </p>rake
  </div>
  <div class="grid_5">
    <p>
      <%= story.description %>
    </p>
  </div>
  <div class="grid_2">
    <%= link_to "Show", story_path(story) %>
    <%= link_to "Edit", edit_story_path(story) %>
    <%= link_to "Destroy", story_path(story), :method => 'delete', :confirm => 'Are you sure?' %>
  </div>
  <div class="clear">&nbsp;</div>
<% end %>


<%= link_to 'New story', new_story_path %>
