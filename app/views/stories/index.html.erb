<h1>Listing stories</h1>

<div class="grid_2 prefix_2">
  <p>
    Title
  </p>
</div>
<div class="grid_5">
  <p>
    Description
  </p>
</div>
<div class="clear">&nbsp;</div>
<% @stories.each_with_index do |story,index| %>
  <div id="story_line_<%=  index -%>">
    <div class="grid_2 prefix_2">
      <p>
        <%= story.title %>
      </p>
    </div>
    <div class="grid_5">
      <p>
        <%= story.description %>
      </p>
    </div>
    <div class="grid_2">
      <%= link_to "Show", feature_story_path(@feature, story) %>
      <%= link_to "Edit", edit_feature_story_path(@feature, story) %>
      <%= link_to "Destroy", feature_story_path(@feature, story), :method => 'delete', :confirm => 'Are you sure?' %>
    </div>
  </div>
  <div class="clear">&nbsp;</div>
<% end %>


<%= link_to 'New story', new_feature_story_path(@feature) %>
