<h2><%= t(:change_your_password, :scope => [:password_reset]) %></h2>

<p>
  <%= t(:we_will_email, :scope => [:password_reset]) %>
</p>

<% form_for :password, :url => passwords_path do |form| %>
  <div class="text_field">
    <%= form.label :email, t(:email) %>
    <%= form.text_field :email %>
  </div>
  <div class="submit_field">
    <%= form.submit t(:reset_password, :scope => [:password_reset]), :disable_with => t(:please_wait_dots) %>
  </div>
<% end %>