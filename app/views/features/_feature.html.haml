- content_for :js do
  :javascript
    rails_authenticity_token = '#{form_authenticity_token}'
.feature.grid_7.alpha
  .grid_7
    .feature_header.header= t(:feature)
    .feature_title.title.rest_in_place{:attribute => 'title', :id => dom_id(feature), :object => 'feature'}= feature.title
  .clear &nbsp;
  .grid_7
    .feature_why.main_text.rest_in_place{:attribute => 'why', :id => dom_id(feature), :object => 'feature'}= feature.why
  .clear &nbsp;
  .grid_7
    .feature_who.main_text.rest_in_place{:attribute => 'who', :id => dom_id(feature), :object => 'feature'}= feature.who
  .clear &nbsp;
  .grid_7
    .feature_what.main_text.rest_in_place{:attribute => 'what', :id => dom_id(feature), :object => 'feature'}= feature.what
  .clear &nbsp;
  - feature.scenarios.each do |scenario|
    .scenario.grid_7.alpha
      .grid_2
        .scenario_header.header= t(:scenario)
      .grid_5
        .fltl.right_margin.edit= minus_link_to scenario_path(scenario), :confirm => t(:are_you_sure), :method => :delete
        .scenario_title.title.rest_in_place{:attribute => 'title', :id => dom_id(scenario), :object => 'scenario', :url => scenario_path(scenario)}= scenario.title
      .clear &nbsp;
      - scenario.main_steps.each do |step|
        .grid_1
          .right.edit= plus_link_to new_scenario_step_sub_step_path(step)
        .grid_1.scenario_keyword.keyword
          = t(step.keyword)
        .grid_5
          .scenario_step.main_text.rest_in_place{:attribute => 'instruction', :id => dom_id(step), :object => 'scenario_step', :url => scenario_step_path(step)}
            = step.instruction
        .clear &nbsp;
        - step.children.each do |child_step|
          .grid_1.right.edit= minus_link_to scenario_step_path(child_step), :confirm => t(:are_you_sure), :method => :delete
          .grid_1
            .scenario_link_keyword.link_keyword
              = t(child_step.keyword)
          .grid_5
            .scenario_step.main_text.rest_in_place{:attribute => 'instruction', :id => dom_id(child_step), :object => 'scenario_step', :url => scenario_step_path(child_step)}
              = child_step.instruction
          .clear &nbsp;
    .clear &nbsp;
.clear &nbsp;
